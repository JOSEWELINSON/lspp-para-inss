rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite que qualquer pessoa leia os arquivos, pois os links não são públicos.
    // Apenas usuários com acesso ao Firestore poderão ver os links.
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null; // Apenas usuários autenticados podem escrever/enviar arquivos.
    }
  }
}
