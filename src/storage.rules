rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regra geral: permite leitura para qualquer pessoa
    match /{allPaths=**} {
      allow read: if true;
    }

    // Regras para a pasta de solicitações 'requests'
    match /requests/{requestId}/{allPaths=**} {
      // Apenas usuários autenticados podem escrever (fazer upload)
      allow write: if request.auth != null
                    // Garante que o tamanho do arquivo individual seja no máximo 20MB
                    && request.resource.size < 20 * 1024 * 1024;
    }
  }
}
