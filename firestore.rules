
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for reusable logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    // User can manage their own profile
    match /users/{userId} {
      allow read, create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if false;
    }

    // Requests collection access rules (SIMPLIFIED FOR PROTOTYPE)
    match /requests/{requestId} {
      // Any authenticated user can read/write.
      // In a real app, this would be locked down to owners and admins.
      allow read, write: if isSignedIn();
    }
    
    // Admins collection is read-only for clients, managed server-side.
    match /admins/{adminId} {
        allow read: if isSignedIn();
        allow write: if false; // Should only be written from a trusted backend
    }
  }
}
